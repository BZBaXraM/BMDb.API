@page "/"
@using BMDb.BlazorApp.Models
@using BMDb.BlazorApp.Services
@inject IAsyncMovieService MovieService

<PageTitle>BMDb</PageTitle>

@if (_movies == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <form>
        <div class="container pt-5">
            <div class="row">
                @foreach (var item in _movies)
                {
                    <div class="col-md-4 mb-4">
                        @if (!string.IsNullOrEmpty(item.Title))
                        {
                            <img src="@item.Poster" class="card-img-top" alt="@item.Title Poster">
                        }

                        <div class="card-body">
                            <h5>
                                @item.Title
                            </h5>
                            <p class="card-text">
                                <strong>Year:</strong> @item.Year<br/>
                                <strong>Genre:</strong> @item.Genre<br/>
                                <strong>Director:</strong> @item.Director<br/>
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
}

@code {
    private List<MovieModel>? _movies;

    protected override async Task OnInitializedAsync()
    {
        _movies = await MovieService.GetMoviesAsync();
    }

}