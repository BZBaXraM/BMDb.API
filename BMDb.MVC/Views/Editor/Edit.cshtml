@model BMDb.MVC.Models.MovieViewModel?

@{
    Layout = "_Layout";
}

<h3 class="mt-3">Edit Movie</h3>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly="readonly"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Poster</label>
            <input type="text" class="form-control" asp-for="Poster"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Year</label>
            <input type="text" class="form-control" asp-for="Year"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" asp-for="Genre"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Director</label>
            <input type="text" class="form-control" asp-for="Director"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Plot</label>
            <input type="text" class="form-control" asp-for="Plot"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Trailer</label>
            <input type="text" class="form-control" asp-for="Trailer"/>
        </div>
        <div class="mt-3">
            <label class="form-label">IMDb Id</label>
            <input type="text" class="form-control" asp-for="ImdbId"/>
        </div>

        <div class="mt-3 d-flex justify-content-between">

            <button type="submit"
                    asp-action="Edit"
                    class="btn btn-primary" id="cool-button-save">
                Save
            </button>
            <button type="submit" asp-controller="Editor"
                    asp-action="Delete"
                    class="btn btn-danger" id="cool-button-delete">
                Delete
            </button>
        </div>
    </form>
}

<div>
    <br/>
    <a asp-action="Index" class="back-link">Back to Movie list</a>
</div>