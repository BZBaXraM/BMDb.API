@using BMDbMvcUI.Data.Roles
@model IEnumerable<MovieViewModel>

@{
    ViewBag.Title = "Movies";
    Layout = "_Layout";
}

<form>
    <div class="container pt-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(item.Title))
                        {
                            <img src="@item.Poster" class="card-img-top" alt="@item.Title Poster">
                        }
                        <div class="card-body">
                            <h3 class="card-title text-success">@item.Title</h3>
                            <p class="card-text">
                                <strong>Year:</strong> @item.Year<br>
                                <strong>Genre:</strong> @item.Genre<br>
                                <strong>Director:</strong> @item.Director
                            </p>
                            <div class="row mt-3">

                                <div class="col">
                                    @if (User.IsInRole(Roles.Admin))
                                    {
                                        <a asp-controller="Editor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success form-control" id="cool-button-edit">Edit</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Movie", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">Previous</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Movie", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Movie", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">Next</a>
            </li>
        </ul>
    </nav>

</form>